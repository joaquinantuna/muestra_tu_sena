<div class="conteiner text-center">
  <h2><%= @lesson.name %></h2>
  <div>
    <%= cl_video_tag( @lesson.video.key,
      :start_offset=>"2", :resource_type=>"video",
      :loop => false, :controls => true,
      :transformation => [
        :height=>300, :width=>480, :crop=>"scale",
        :quality=>"auto" ],
      :fallback_content => "Your browser does not support HTML5 video tags." ) %>
  </div>
  <div>
    <%= cl_image_tag @lesson.photo.key, height: 300, width: 400 %>
  </div>
  <%= render "shared/boton_like"  %>
  <div>
    <%= link_to "volver a lecciones", lessons_path %>
  </div>

</div>
